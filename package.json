{
  "name": "confetti",
  "version": "1.0.1",
  "description": "confetti",
  "main": "main.js",
  "author": "iami233",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "asar": true,
    "appId": "com.example.confetti",
    "productName": "Confetti",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
